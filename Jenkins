pipeline {
    agent any

    tools {
        python "Python3"  // This must match the Python version you configured in Jenkins
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/poonamv28/CICD-project.git'  // Replace with your actual repo URL
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Application') {
            steps {
                sh 'python app.py'
            }
        }
    }
}
